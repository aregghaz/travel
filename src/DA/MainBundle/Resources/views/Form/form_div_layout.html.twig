{% extends 'form_div_layout.html.twig' %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <div class="error_input">
                    {% for error in errors %}
                      {{ error.message }}
                    {% endfor %}
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}