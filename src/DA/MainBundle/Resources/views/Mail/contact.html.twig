<table width="100%" cellpadding="0" cellspacing="0" bgcolor="e4e4e4">
    <tr>
        <td>Name</td>
        <td>{{ name }}</td>
    </tr>
    <tr>
        <td>City</td>
        <td>{{ city }}</td>
    </tr>
    <tr>
        <td>Telephone</td>
        <td>{{ telephone }}</td>
    </tr>
    <tr>
        <td>Email</td>
        <td>{{ email }}</td>
    </tr>
    <tr>
        <td>Message</td>
        <td>{{ message |raw }}</td>
    </tr>
</table>

<table width="100%" cellpadding="0" cellspacing="0" bgcolor="e4e4e4">
    {% for item in data %}
    <tr>
        {% for info in item %}
            <td>{{ info }}</td>
        {% endfor %}
    </tr>
    {% endfor %}
    <tr>
        <td>Total price</td>
        <td>{{ total }}</td>
    </tr>
</table>


